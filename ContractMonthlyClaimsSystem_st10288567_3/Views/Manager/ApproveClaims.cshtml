using Microsoft.AspNetCore.Mvc;

namespace ContractMonthlyClaimsSystem_st10288567_3.Views.Manager

@model IEnumerable<ContractMonthlyClaimsSystem_st10288567_3.Models.Claim>

@{
    Layout = "_Layout";
}

<h2>Claims to Approve</h2>

@if (!Model.Any())
{
    <p>No verified claims.</p>
}
else
{
    <form asp-action="AutoApproveAll" method="post" class="mb-3">
        <button type="submit" class="btn btn-primary btn-sm">
            Approve All Verified Claims
        </button>
    </form>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Notes</th>
                <th>Status</th>
                <th>Total Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.Notes</td>
                    <td>@claim.Status</td>
                    <td>@claim.TotalAmount</td>
                    <td>
                        <a asp-action="Approve" asp-route-id="@claim.Id" class="btn btn-success btn-sm">Approve</a>
                        <a asp-action="Reject" asp-route-id="@claim.Id" class="btn btn-danger btn-sm">Reject</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}